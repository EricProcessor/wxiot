page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
  padding: 0 20rpx;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;
  border: 1px solid #5a79ff; 
  color: #5a79ff; 
}
.navbar .item:first-child{
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px; 
} 
.navbar .item:last-child{
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
} 
.navbar .item.active{  
  color: #FFF;  
  background-color: #5a79ff;
}
.bottomnav{
  flex: none;  
  display: flex;  
  background: #fff; 
  box-shadow: 0px -4px 3px rgba(0, 0, 0, .1);
  position: absolute;
  bottom: 0;
  width: 100%;
}
.bottomnav .item{
  height: 98rpx;
  flex: 1;
  text-align: center;
  padding-top: 10rpx;
}  
.bottomnav .item image{
  width: 56rpx;
  height: 46rpx;
  display: block;
  margin: 0 auto;
}
.bottomnav .item text{
  font-size: 24rpx;
  color: #b1b1b1;
}
.bottomnav .item text.active{
  color: #5a79ff;
}
