/* pages/device/device.wxss */
@import '../../app.wxss';
.change{
  border-radius: 3px;
  width: 95%;
  height: 2rem;
  color: #959595;
  font-size: 1rem;
  text-align: center;
  box-shadow: 0px 0px 10px 1px #9a9a9a;
}
.searchContainer{
  width: 100%;
  height: 2rem;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.cover{
  position:fixed;
  width:100%;
  height:100%;
  top:2rem;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 3;
}
.search_input{
  width: 100%;
  height: 2rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.searchText{
  margin-left: 50rpx;
  height: 2rem;
  width: 70%;
}
.searchBtn{
  height: 1rem;
  width: 15%;
  font-size: 0.5rem;
}
.searchBtn button{
  position: absolute;
  right: 20rpx;
  top: 0;
  font-size: 0.7rem;
  height: 1.8rem;
}
.device_list{
  width: 95%;
  display: flex;
  flex-direction: column;
  margin-top: 1.5rem;
}
.device_card{
  width: 100%;
  height: 5rem;
  border-radius: 3px;
  box-shadow: 0px 0px 5px 1px #9a9a9a;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1rem;
}
.photo image{
  height: 4rem;
  width: 4rem;
  border-radius: 3px;
  margin-left: 1rem;
}
.text{
  width: 15rem;
  height: 5rem;
  display: flex;
  flex-direction: column;
}
.title{
  width: 14rem;
  margin-left: 0.5rem;
  margin-top: 0.5rem;
  font-size: 0.9rem;
}
.status0{
   margin-left: 0.5rem;
   margin-top: 1.5rem;
   font-size: 0.7rem;
   color: #9a9a9a;
}
.status1{
   margin-left: 0.5rem;
   margin-top: 1.5rem;
   font-size: 0.7rem;
   color: #ff5a5a;
}
.more image{
  position: absolute;
  right: 1rem;
  width: 0.5rem;
  height: 0.5rem
}