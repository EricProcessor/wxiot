/* pages/data/data.wxss */
@import '../../app.wxss';
.title{
   display: flex;  
   align-items: center;
   width: 95%;
   font-size: 1.5rem;
}
.time{
   display: flex;  
   width: 95%;
   font-size: 0.8rem;
   color: #9a9a9a
}
.blank{
  width: 100%;
  height: 1rem;
}
.card_wrap{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 95%;
  justify-content: space-around;
}
.card{
  display: flex;
  flex-direction: column;
  width: 48%;
  height: 5rem;
  box-shadow: 0px 0px 10px 0.5px #9a9a9a;
  border-radius: 4px;
  margin-bottom: 0.8rem;
}
.add{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 46%;
  height: 4.5rem;
  border: dashed #9a9a9a;
  border-radius: 4px;
  margin-bottom: 0.8rem;
}
.add_img{
  width: 2rem;
  height: 2rem;
}
.card_title{
  font-size: 0.8rem;
  margin-top: 0.8rem;
  margin-left: 1rem;
}
.card_num{
  margin-left: 1rem;
  margin-top: 0.8rem;
  font-size: 1.2rem;
}